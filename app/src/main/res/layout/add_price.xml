<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".PriceAdd">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#F8CFDD">

        <TextView
            android:id="@+id/price_add_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="164dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="165dp"
            android:text="Current Time"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_country_img"
            android:layout_width="75dp"
            android:layout_height="47dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="53dp"
            android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_budget_country_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/korea" />

        <TextView
            android:id="@+id/tv_budget_country_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="57dp"
            android:text="대한민국"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_country_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.363" />

        <TextView
            android:id="@+id/tv_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="right"
            app:layout_constraintBottom_toTopOf="@+id/all_budget"
            app:layout_constraintEnd_toEndOf="@+id/all_budget"
            app:layout_constraintStart_toStartOf="@+id/all_budget" />

        <TextView
            android:id="@+id/all_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="32dp"
            android:background="#F8CFDD"
            android:gravity="right"
            android:hint="0.0"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/exchange_budget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/exchange_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F8CFDD"
            android:gravity="right"
            android:hint="₩ 0"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/all_budget"
            app:layout_constraintTop_toBottomOf="@+id/all_budget" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/food"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/eat"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="41dp"
            android:layout_marginTop="8dp"
            android:text="식비"
            app:layout_constraintBottom_toTopOf="@+id/stay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/food" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginTop="8dp"
            android:text="쇼핑"
            app:layout_constraintBottom_toTopOf="@+id/etc"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/shopping" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginBottom="96dp"
            android:text="관광"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/sightseeing" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:layout_marginBottom="96dp"
            android:text="교통"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/transport" />

        <ImageView
            android:id="@+id/shopping"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/food"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/shopping"
            android:background="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/sightseeing"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/shopping"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sightseeing" />

        <ImageView
            android:id="@+id/transport"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/sightseeing"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/transport" />

        <ImageView
            android:id="@+id/stay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:srcCompat="@drawable/stay" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="8dp"
            android:text="숙박"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stay" />

        <ImageView
            android:id="@+id/etc"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/stay"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/etc" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginBottom="8dp"
            android:text="ETC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/etc" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDEBF3"
        android:backgroundTint="#9FFAEBEF"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:backgroundTint="#F8CFDD"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/price_add_item"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="?attr/selectableItemBackground"
            app:srcCompat="@drawable/price_item" />

        <ImageView
            android:id="@+id/price_add_album"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="?attr/selectableItemBackground"
            app:srcCompat="@drawable/price_album" />

        <ImageView
            android:id="@+id/price_add_memo"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="?attr/selectableItemBackground"
            app:srcCompat="@drawable/price_memo" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#F8CFDD"
            android:text="저장"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_num7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_num8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_num9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_div"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="÷"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_num4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_num5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_num6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="×"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_num1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_num2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_num3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_point"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="."
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_num0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="⇦"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FAEBEF"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

</LinearLayout>